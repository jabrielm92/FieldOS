# ============================================================
# FieldOS Backend — Environment Variables
# Copy this file to .env and fill in your values.
# Never commit .env to version control.
# ============================================================

# ── MongoDB ─────────────────────────────────────────────────
# Overridden by docker-compose to mongodb://mongodb:27017
# For local dev without Docker: mongodb://localhost:27017
MONGO_URL=mongodb://localhost:27017
DB_NAME=fieldos

# ── Security ─────────────────────────────────────────────────
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=CHANGE_ME_USE_A_STRONG_RANDOM_SECRET

# ── Twilio (SMS + Voice) ─────────────────────────────────────
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_MESSAGING_SERVICE_SID=MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ── ElevenLabs (Voice AI TTS) ────────────────────────────────
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ── OpenAI (AI SMS + Voice logic) ───────────────────────────
OPENAI_API_KEY=sk-...

# ── Stripe (Payments) ────────────────────────────────────────
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ── Resend (Transactional Email) ─────────────────────────────
RESEND_API_KEY=re_...

# ── App URLs ─────────────────────────────────────────────────
# Public-facing URL of this backend — used by Twilio webhooks
# and customer-facing links (portal, invoice, tracking).
# Must be reachable from the internet for Twilio to work.
APP_BASE_URL=https://app.yourdomain.com

# Public URL of the frontend (used for CORS and redirects)
FRONTEND_URL=https://app.yourdomain.com

# Comma-separated list of allowed CORS origins.
# Use * only for local dev.
CORS_ORIGINS=https://app.yourdomain.com

# ── Redis ────────────────────────────────────────────────────
# Overridden by docker-compose to redis://redis:6379/0
REDIS_URL=redis://localhost:6379/0
